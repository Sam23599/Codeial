    <%- body  %>
    
    <%-include('_footer'); %>

    <%- script %>

    
    <script>
        <% if (flash.success && flash.success.length >0 ) { %>
            new Noty ({
                theme: 'relax',
                type: 'success',
                layout: 'topRight',
                text: '<%- flash.success %>', 
                timeout :2000 ,
            }).show();     
        <% } %>
        
        <% if (flash.error && flash.error.length >0 ) { %>
            new Noty ({
                theme: 'relax',
                type: 'error',
                layout: 'topRight',
                text: '<%- flash.error %>', 
                timeout :2000 ,
            }).show();     
        <% } %>

        
    </script>
</body>
